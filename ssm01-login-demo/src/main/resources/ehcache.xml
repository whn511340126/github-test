<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">
    <!--将缓存中溢出的数据存入到磁盘的指定位置上-->
    <diskStore path="d:\\ehcache"/>

    <!--配置缓存的管理策略-->
    <defaultCache maxElementsInMemory="10" eternal="false" timeToIdleSeconds="5" timeToLiveSeconds="10"
                   overflowToDisk="true" copyOnWrite="true" copyOnRead="true"/>
</ehcache>